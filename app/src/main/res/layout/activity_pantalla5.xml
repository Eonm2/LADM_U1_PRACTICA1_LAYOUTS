<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:background="@color/teal_200"
    tools:context=".pantalla5">


    <TextView
        android:text="Card"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="40dp"
        android:layout_columnSpan="2"
        android:textColor="@color/white"
        android:layout_marginTop="10dp">
    </TextView>
    <TextView
        android:text="Simple and easy to use app"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:layout_columnSpan="2"
        android:textColor="@color/white">
    </TextView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/biblia"
            android:scaleType="centerInside"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text"
            android:textSize="25dp"
            android:layout_gravity="center">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa a tus notas"
            android:textSize="18dp"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/capilla"
            android:scaleType="centerInside"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adress"
            android:textSize="25dp"
            android:layout_gravity="center">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifica tu direccion"
            android:textSize="18dp"
            android:layout_gravity="center">
        </TextView>

    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="176dp"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar"
            android:scaleType="centerInside"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Character"
            android:textSize="25dp"
            android:layout_gravity="center">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elije tu avatar"
            android:textSize="18dp"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:layout_margin="20dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/targeta"
            android:scaleType="centerInside"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Card"
            android:textSize="25dp"
            android:layout_gravity="center">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controla tus tarjetas"
            android:textSize="18dp"
            android:layout_gravity="center">
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="176dp"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/keyicon"
            android:scaleType="centerInside"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="25dp"
            android:layout_gravity="center">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambia tu contraseÃ±a"
            android:textSize="18dp"
            android:layout_gravity="center">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/entrega"
            android:scaleType="centerInside"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logistics"
            android:textSize="25dp"
            android:layout_gravity="center">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organiza tus envios"
            android:textSize="18dp"
            android:layout_gravity="center">
        </TextView>

    </LinearLayout>

    <GridLayout
        android:columnCount="2"
        android:rowCount="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/setting"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_rowSpan="2">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textSize="25dp"
            android:layout_gravity="left">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configura tu entorno a tu gusto"
            android:textSize="18dp"
            android:layout_gravity="left">

        </TextView>
    </GridLayout>
</GridLayout>